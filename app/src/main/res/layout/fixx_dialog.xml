<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_root"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/material_dark">

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Login"
            android:id="@+id/student_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="210dp"
            app:boxStrokeColor="@color/white"
            android:layout_centerInParent="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/airbnbcerealbold"
                android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Login"
            android:id="@+id/student_email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_alignParentTop="true"
            android:layout_marginTop="293dp"
            app:boxStrokeColor="@color/white"
            android:layout_centerInParent="true">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/airbnbcerealbold"
                android:textSize="20sp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:text="Contact Fixx"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:id="@+id/fixx_title"
            android:fontFamily="@font/airbnbcerealbold"
            android:textSize="40sp"
            android:textColor="@color/lightGray"
            android:layout_marginTop="130dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="67dp" android:layout_alignParentEnd="true" android:layout_marginEnd="61dp"/>
    <ImageView
            android:layout_width="102dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_phone_forwarded_black_24dp"
            android:id="@+id/imageView4" android:layout_marginTop="18dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="144dp"/>

</RelativeLayout>